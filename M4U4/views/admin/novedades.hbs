<link rel="stylesheet" href="/stylesheets/muebleria.css">
<div class="container" style="margin-top: 150px;">
    <div class="row">
        <div class="col">
            <p class="text-right">
                <span> Hola {{usuario}}
                    <a href="/admin/login/logout" class="btn btn-danger">Cerrar sesi√≥n <i
                            class="fas fa-sign-out-alt"></i></a>
            </p>
        </div>
    </div>
    <div class="row">
        <div class="col-7" style="margin-top: -9px ;">
            <h2>Listado de Novedades</h2>
        </div>
        <div class="col-5 text-right">
            <a href="/admin/novedades/agregar" class="btn btn-success"><i class="fas fa-plus"></i> Nuevo </a>
        </div>
    </div>
    {{!-- fila3 --}}
    <div class="row">
        <div class="col">
            <table class="table">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Titulo</th>
                        <th scope="col">Imagen</th>
                        <th scope="col" class="text-center">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each novedades}}
                    <tr>
                        <th scope="row">{{id}}</th>
                        <td>{{titulo}}</td>
                        <td>{{{imagen}}}</td>
                        <td class="text-center">
                            <a  href="/admin/novedades/modificar/{{id}}" class="btn btn-secondary"><i class="fas fa-pencil"></i></a>
                            <a href="/admin/novedades/eliminar/{{id}}" class="btn btn-secondary"><i class="fas fa-trash"></i></a>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>